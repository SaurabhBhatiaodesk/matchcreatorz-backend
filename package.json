{
  "name": "nest-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:dev": "nest build user && nest build admin && nest build socket",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:admin": "nest start admin",
    "start:user": "nest start user",
    "start:socket": "nest start socket",
    "start:admin:dev": "nest start admin --watch",
    "start:user:dev": "nest start user --watch",
    "start:socket:dev": "nest start socket --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/user/main",
    "seed:admin": "ts-node -r tsconfig-paths/register scripts/seed-admin.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/user/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.11.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.4.1",
    "@nestjs/serve-static": "^4.0.1",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/websockets": "^10.4.1",
    "aws-sdk": "^2.1569.0",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "firebase-admin": "^12.4.0",
    "fs": "^0.0.1-security",
    "helmet": "^7.1.0",
    "https": "^1.0.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "mysql2": "^3.9.1",
    "nestjs-i18n": "^10.4.5",
    "node-cron": "^3.0.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5",
    "stripe": "^16.6.0",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^5.4.0",
    "typeorm": "^0.3.20",
    "websockets": "^0.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/page-library(|/.*)$": "<rootDir>/libs/page-library/src/$1",
      "^@app/page-lib(|/.*)$": "<rootDir>/libs/page-lib/src/$1",
      "^@app/enquiry-lib(|/.*)$": "<rootDir>/libs/enquiry-lib/src/$1",
      "^@app/util-lib(|/.*)$": "<rootDir>/libs/util-lib/src/$1",
      "^@app/mail-lib(|/.*)$": "<rootDir>/libs/mail-lib/src/$1",
      "^@app/user-lib(|/.*)$": "<rootDir>/libs/user-lib/src/$1",
      "^@app/admin-setting-lib(|/.*)$": "<rootDir>/libs/admin-setting-lib/src/$1",
      "^@app/tag-lib(|/.*)$": "<rootDir>/libs/tag-lib/src/$1",
      "^@app/resource-lib(|/.*)$": "<rootDir>/libs/resource-lib/src/$1",
      "^@app/category-lib(|/.*)$": "<rootDir>/libs/category-lib/src/$1",
      "^@app/booking-lib(|/.*)$": "<rootDir>/libs/booking-lib/src/$1",
      "^@app/review-lib(|/.*)$": "<rootDir>/libs/review-lib/src/$1",
      "^@app/notification-lib(|/.*)$": "<rootDir>/libs/notification-lib/src/$1"
    }
  }
}